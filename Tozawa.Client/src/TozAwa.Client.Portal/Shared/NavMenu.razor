@using Tozawa.Client.Portal.HttpClients.Helpers
@namespace Tozawa.Client.Portal.Shared
@inject Tozawa.Client.Portal.Services.TokenProvider TokenProvider
@inherits Tozawa.Client.Portal.Shared.BaseComponent

<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader style="background-color: white;">
        <img src="/images/finalelogo_infylld.png" asp-append-version="true" height="40px" width="200px" />
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/home" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
            <SystemText TextId=SystemTextId.Home FallbackText="Home"></SystemText>
        </MudNavLink>
        <MudNavLink Href="/fetchdata" Icon="@Icons.Material.Filled.Storage">FetchData</MudNavLink>
        <MudNavGroup Title="Expanding" Icon="@Icons.Material.Filled.DashboardCustomize" Expanded="true">
            <MudNavLink Href="#" Icon="@Icons.Material.Filled.Camera">Photos</MudNavLink>
            <MudNavLink Href="#" Icon="@Icons.Material.Filled.Celebration">Party</MudNavLink>
        </MudNavGroup>
        @if (_currentUser != null && _currentUser.RootUser)
        {
            <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">
                <SystemText TextId=SystemTextId.Setting FallbackText="Setting"></SystemText>
            </MudNavLink>
        }
    </MudNavMenu>
</MudDrawer>
@code {
    [Parameter]
    public bool SideBarOpen { get; set; }
}