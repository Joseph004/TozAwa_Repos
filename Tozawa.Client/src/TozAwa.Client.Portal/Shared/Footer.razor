                    </div>
                    <div class="tz-max-div-text">
                        <MudText Class="tz-foot-text" Typo="Typo.h4"
                            Style="@($"color: {"#fff"}; font-size: {"20px"}; font-weight: {"600"}; margin-bottom: {"2px"};")">
