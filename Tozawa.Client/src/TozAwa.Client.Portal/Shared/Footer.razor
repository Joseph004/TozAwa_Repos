                                    Style="@($"color: {"#3f729b"};")">
                                </MudIconButton>
                            </div>
                            <div>
                                <MudIconButton Title="Youtube" Icon="@(Icons.Custom.Brands.YouTube)"
                                    @onclick="@(e => ToggleSocialIcon())" Size="Size.Medium"
                                    Style="@($"color: {"#c4302b"};")">
                                </MudIconButton>
                            </div>
                            <div>
                                <MudIconButton Title="Twiter" Icon="@(Icons.Custom.Brands.Twitter)"
                                    @onclick="@(e => ToggleSocialIcon())" Size="Size.Medium"
                                    Style="@($"color: {"#1da1f2"};")">
                                </MudIconButton>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flexColumn tz-div-space">
                <div class="d-flex flexColumn tz-div-space-icontext">
                    <div>
                        <MudDivider Style="@($"background-color: {"#ff5e14"}; width: {"2px"}; margin-right: {"2vh"};")"
                            Vertical="true" />
                    </div>
                    <div class="d-flex flex-column tz-max-div-text">
                        <div>
                            <MudText Class="tz-foot-text" Typo="Typo.h4"
                                Style="@($"color: {"#fff"}; font-size: {"20px"}; font-weight: {"600"};")">
                                Useful Links</MudText>
                            <MudDivider Style="@($"background-color: {"#ff5e14"}; width: {"25%"}")" Class="my-6" />
                        </div>
                        <div style="margin-top: 1vh;" class="d-flex">
                            <div class="d-flex flex-column">
                                <div>
                                    <MudButton Class="tz-foot-links" Link="#">Home</MudButton>
                                </div>
                                <div style="margin-top: 1vh;">
                                    <MudButton Class="tz-foot-links" Link="#">Our Services</MudButton>
                                </div>
                                <div style="margin-top: 1vh;">
                                    <MudButton Class="tz-foot-links" Link="#">Contact Us</MudButton>
                                </div>
                            </div>
                            <div class="d-flex flex-column" style="margin-left: 1vh;">
                                <div>
                                    <MudButton Class="tz-foot-links" Link="#">About Us</MudButton>
                                </div>
                                <div style="margin-top: 1vh;">
                                    <MudButton Class="tz-foot-links" Link="#">Our Team</MudButton>
                                </div>
                                <div style="margin-top: 1vh;">
