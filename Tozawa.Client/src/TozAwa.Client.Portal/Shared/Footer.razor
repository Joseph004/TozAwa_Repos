                            incididuntut consec tetur adipisicing elit,Lorem ipsum dolor sit amet.
                        </MudText>
                        <MudText Class="tz-foot-text" Typo="Typo.h4"
                            Style="@($"color: {"#fff"}; font-size: {"20px"}; margin-top: {"2.5vh"}; font-weight: {"600"};")">
                            Follow us</MudText>
                        <div class="d-flex">
                            <div>
                                <MudIconButton Title="Facebook" Icon="@(Icons.Custom.Brands.Facebook)"
                                    @onclick="@(e => ToggleSocialIcon())" Size="Size.Medium"
                                    Style="@($"color: {"#3b5998"};")">
                                </MudIconButton>
                            </div>
                            <div>
                                <MudIconButton Title="Instagram" Icon="@(Icons.Custom.Brands.Instagram)"
