@page "/settings"
@attribute [Authorize(Policy = "admin-member")]

@namespace TozawaNGO.Pages
@using TozawaNGO.Helpers
@using TozawaNGO.Shared
@inherits BasePage

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel OnClick="() => Activate(ActiveTab.Members)" Text=@(Translate(SystemTextId.Members))>
        <MudItem xs="12" sm="12" md="12">
            <Members />
        </MudItem>
    </MudTabPanel>
    <MudTabPanel OnClick="() => Activate(ActiveTab.Organizations)" Text=@(Translate(SystemTextId.Partners))>
        <MudItem xs="12" sm="12" md="12">
            This is organization
        </MudItem>
    </MudTabPanel>
</MudTabs>
