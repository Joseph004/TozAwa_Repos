@page "/xliff"
@attribute [Authorize(Policy = "root-user")]

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudGrid>
        <MudItem xs="12">
            <MudPaper Square="true">
                <MudGrid>
                    <MudItem xs="12">
                        <MudText Typo="Typo.h6">Import xliff</MudText>
                        @if (InputFile)
                        {
                            <InputFile OnChange="OnInputFileChange" accept=".xlf" />
                        }
                        <MudButton @onclick="UploadFile" Color="Color.Primary" Variant="Variant.Filled" Disabled="SelectedFiles==null">Import xliff</MudButton>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Square="true">
                <MudText Typo="Typo.h6">Export xliff</MudText>
                <XliffExportView></XliffExportView>
            </MudPaper>
        </MudItem>
        <MudItem xs="12">
            <MudPaper Square="true">
                <MudText Typo="Typo.h6">Search xliff</MudText>
                <XliffSearchView></XliffSearchView>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>