@attribute [Authorize(Policy = "root-user")]

<MudGrid>
    <MudItem xs="3" sm="3" md="3">
        <MudSelect AnchorOrigin="Origin.BottomCenter" @bind-Value="sourceLanguage" Label="From langauge">
            @foreach (var language in Languages)
            {
                <MudSelectItem Value="@language">@language.LongName</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="3" sm="3" md="3">
        <MudSelect AnchorOrigin="Origin.BottomCenter" @bind-Value="targetLanguage" Label="To Language">
            @foreach (var language in Languages)
            {
                <MudSelectItem Value="@language">@language.LongName</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="3" sm="3" md="3">
        <MudSelect AnchorOrigin="Origin.BottomCenter" @bind-Value="selectedSystemType" Label="System type">
            @foreach (var systemType in SystemTypes)
            {
                <MudSelectItem Value="@systemType">@systemType.Description</MudSelectItem>
            }
        </MudSelect>
    </MudItem>
    <MudItem xs="3" sm="3" md="3">
        <MudButton @onclick="Export" Color="Color.Primary" Variant="Variant.Filled">Export</MudButton>
    </MudItem>
</MudGrid>
