@page "/settings"
@attribute [Authorize(Policy = "admin-member")]

@namespace TozawaMauiHybrid.Components.Pages.Settings
@using TozawaMauiHybrid.Helpers
@using TozawaMauiHybrid.Component
@inherits BasePage

<style>
    .mud-tabs-tabbar {
        background-color: #000 !important;
        color: white;
    }
</style>

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel IconColor="Color.Secondary" Icon="@Icons.Material.Filled.Groups"
        OnClick="() => Activate(ActiveTab.Members)" Text=@(Translate(SystemTextId.Members))>
        <MudItem xs="12" sm="12" md="12">
            <Members />
        </MudItem>
    </MudTabPanel>
    <MudTabPanel IconColor="Color.Secondary" Icon="@Icons.Material.Filled.GroupWork"
        OnClick="() => Activate(ActiveTab.Organizations)" Text=@(Translate(SystemTextId.Partners))>
        <MudItem xs="12" sm="12" md="12">
            This is organization
        </MudItem>
    </MudTabPanel>
    <MudTabPanel BadgeData="0" BadgeColor="Color.Success" IconColor="Color.Secondary"
        Icon="@Icons.Material.Filled.AttachFile" OnClick="() => Activate(ActiveTab.Files)"
        Text=@(Translate(SystemTextId.Files))>
        <MudItem xs="12" sm="12" md="12">
            This is files
        </MudItem>
    </MudTabPanel>
</MudTabs>
