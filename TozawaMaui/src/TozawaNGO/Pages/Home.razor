@page "/"
@namespace TozawaNGO.Pages
@inherits BasePage
@implements IDisposable

<style>
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: serif;
    letter-spacing: 2px;
    font-size: 30px;
  }
</style>

<PageTitle>Home</PageTitle>

<ErrorHandling TCategoryName=@typeof(Home)>
  <ChildContent>
    <div class="homePageDiv" style="width: 100%; gap: 10px; background-color: #f6e8db;">
      <div style="flex: 1; height: 100%; max-height: 100%; width: 100%; max-width: 100%;">
        <img
          style="background-position: center center; background-repeat: no-repeat; max-height: 100%; width: 100%; max-width: 100%; height: 100%; background-size: cover;"
          src="/images/@_image" asp-append-version="true" />
      </div>
      <div
        style="flex: 1; width: 100%; max-width: 100%; height: 100%; max-height: 100%; flex-direction: column; display: flex; gap: 15px;">
        <div>
          <MudText Typo="Typo.h3">
            Chez nous vous trouvez une maison
          </MudText>
        </div>
        <div>
          <MudText Typo="Typo.h5">
            Ensemble, nous faisons de Kinshasa une ville avec des quartiers animés,
            des environnements magnifiques et une population diversifiée.
            Dans une ville que nous aimons. Bienvenue à la maison.
          </MudText>
        </div>
        <div>
          <MudText Typo="Typo.h4">
            Libre actuelement
          </MudText>
        </div>
        <div>
          <MudText>
            Cherchez vous une maison, une parcelle, un appartement ou un entrepot?
            Chez nous c'est facile de chercher et de trouver.
          </MudText>
        </div>
        <div style="display: flex; width: 100%; gap: 10px;">
          <MudButton StartIcon="@Icons.Material.Filled.Search" Color="Color.Secondary" Variant="Variant.Filled">
            Recherchez
          </MudButton>
          <MudButton StartIcon="@Icons.Material.Filled.PersonAddAlt1" Color="Color.Secondary" Variant="Variant.Filled">
            Enregistrez-vous
          </MudButton>
        </div>
      </div>
    </div>
    <br />
    <div class="mud-theme-secondary" style="width: 100%;"></div>
    <br />
    <div class="mud-theme-secondary" style="width: 100%;"></div>
    <br />
    <div class="mud-theme-secondary" style="width: 100%;"></div>
  </ChildContent>
  <ErrorContent Context="ex">
    @string.Empty
  </ErrorContent>
</ErrorHandling>
