@page "/settings"
@attribute [Authorize(Roles = "LandLoard")]

@namespace TozawaNGO.Pages
@using ShareRazorClassLibrary.Helpers
@using TozawaNGO.Shared
@inherits BasePage

<style>
    .mud-tabs-tabbar {
        background-color: #000 !important;
        color: white;
    }
    .mud-tab-active {
        color: #e59866 !important;
    }
</style>

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel IconColor="Color.Secondary" Icon="@Icons.Material.Filled.Groups"
        OnClick="() => Activate(ActiveTab.Members)" Text=@(Translate(SystemTextId.Members))>
        <MudItem xs="12" sm="12" md="12">
            <Members />
        </MudItem>
    </MudTabPanel>
</MudTabs>
